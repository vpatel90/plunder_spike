<div class="row">
  <div class="col s12 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title"><%= player.user.name %></span>
        <% if player.id == @game.turn_player %>
          <span class="right"> It's thier turn </span>
        <% end %>
        <p>Cards: <%= player.cards.count %></p>
      </div>
      <div class="card-action">
        <% player.merchants.each do |merchant| %>
          <p><a>Merchant: <%= merchant.merchant_card.value %></a></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
